<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="activity_data_view_form" model="ir.ui.view">
            <field name="name">act_data.view.form</field>
            <field name="model">activity.data</field>
            <field name="arch" type="xml">
                <form string="Activity Data">
                <header>
                	<button name="get_act_details" type="object" string="Import Activity Data"/>
                </header>
                	<sheet>
                       <group>
                    		<group>
	                        	<field name="name"/>
	                        	<field name="tourico_code"/>
	                        </group>
	                        <group>
	                        	<field name="destn_code"/>
	                        	<field name="tourico_destn_id"/>
	                        </group>
	                        <group colspan="4">
	                        	<field name="description"/>
	                        	
	                    	</group>
	                    <notebook>
	                    
	                    	<page string="General Information">
				                    <group>
				                    	<field name="stars"/>
				                    	<field name="category"/>
				                    	<field name="phone"/>
				                    	<field name="address"/>
		                        		<field name="cityName"/>
		                        		<field name="country"/>
				                    </group>
		                    </page>
	                    </notebook>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

         <record id="activity_data_view_tree" model="ir.ui.view">
            <field name="name">act_data.view.tree</field>
            <field name="model">activity.data</field>
            <field name="arch" type="xml">
                <tree string="Activity Data">
                    <field name="name"/>
                    <field name="tourico_code"/>
                </tree>
            </field>
        </record>

        <record id="activity_data_view_search" model="ir.ui.view">
            <field name="name">activity_data.view.search</field>
            <field name="model">activity.data</field>
            <field name="arch" type="xml">
                <search string="Activity Data">
                    <field name="name"/>
                    <field name="tourico_code"/>
               </search>
            </field>
        </record>

        <record id="action_act_data" model="ir.actions.act_window">
            <field name="name">Activity Data</field>
            <field name="res_model">activity.data</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="activity_data_view_search"/>
        </record>

        <menuitem action="action_act_data" id="menu_act_data" 
        		parent="menu_configuration" name="Activity Data" 
        		sequence="13"/>
        		
        		
        
    </data>
</openerp>
