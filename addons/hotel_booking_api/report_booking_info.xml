		<template id="spire_external_layout">
		    <!-- Multicompany -->
		    <t t-if="not o and doc">
		        <t t-set="o" t-value="doc"/>
		    </t>
		    <t t-if="o and 'company_id' in o">
		        <t t-set="company" t-value="o.company_id"></t>
		    </t>
		     <t t-if="o and 'customer_id' in o">
		        <t t-set="customer" t-value="o.customer_id"></t>
		    </t>
		    <t t-if="not o or not 'company_id' in o">
		        <t t-set="company" t-value="res_company"></t>
		    </t>
			<t t-if="not o or not 'customer_id' in o">
		        <t t-set="customer" t-value="res_partner"></t>
		    </t>
		    <t t-call="hotel_booking_api.spire_external_layout_header" />
		    <t t-raw="0" />
		    <t t-call="report.external_layout_footer" />
		</template>
		
		<template id="spire_external_layout_header">
		    <div class="header">
		        <div class="row">
		            <div class="col-xs-3">
		                <img t-if="user.agency_id and user.agency_id.agency_logo" t-att-src="'data:image/png;base64,%s' % user.agency_id.agency_logo" style="max-height: 45px;"/>
		            </div>
		            <div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>
		        </div>
		        <div class="row zero_min_height">
		            <div class="col-xs-12">
		                <div style="border-bottom: 1px solid black;"></div>
		            </div>
		        </div>
		        <div class="row">
		            <div class="col-xs-6" name="company_address">
		                <span t-field="company.partner_id"
		                    t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
		                    style="border-bottom: 1px solid black; display:inline-block;"/>
		            </div>
		        </div>
		    </div>
		</template>
	
