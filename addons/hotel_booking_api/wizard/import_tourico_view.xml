<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_import_tourico" model="ir.ui.view">
            <field name="name">import.tourico</field>
            <field name="model">import.tourico</field>
            <field name="arch" type="xml">
             <form string="Import Tourico Data">
                <p class="oe_grey">
                    Tourico data import
                </p>
                <footer>
                    <button name="do_import_destn_only" string="Import Destinations only" type="object" class="oe_highlight"/>
                    <button name="do_import_olympus_hoteldata" string="Import All Hotels" type="object" class="oe_highlight"/>
                    <button name="do_import_destn_hotel_details" string="Import Destinations" type="object" class="oe_highlight"/>
                    <button name="generate_csv_hoteldata" string="Generate Hotel CSV" type="object" class="oe_highlight"/>
                    <button name="do_import_act" string="Import Activities" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <record id="action_import_tourico" model="ir.actions.act_window">
            <field name="name">Import Tourico</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.tourico</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_import_tourico"/>
            <field name="target">new</field>
        </record>
        
        <menuitem action="action_import_tourico" id="menu_import_tourico" 
        		parent="menu_configuration" name="Import Tourico" 
        		sequence="25" groups="base.group_erp_manager"/>
        
        
        
    </data>
</openerp>
