<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_import_locations" model="ir.ui.view">
            <field name="name">import.locations</field>
            <field name="model">import.locations</field>
            <field name="arch" type="xml">
             <form string="Import Locations">
                <p class="oe_grey">
                    API data import
                </p>
                <footer>
                    <button name="do_import" string="Import" type="object" class="oe_highlight"/>
                    <button name="do_import_tourico" string="Import From Tourico" type="object" class="oe_highlight"/>
                    <button name="do_import_hotels" string="Import Hotels" type="object" class="oe_highlight"/>
                    
                    
                    <button name="import_giata" string="Import Giata" type="object" class="oe_highlight"/>
                    <button name="do_import_sabre_hotels" string="Import Sabre Data" type="object" class="oe_highlight"/>
                    
                    <button name="do_import_all_hotel_facilities" string="Import Hotelbeds Facilities" type="object" class="oe_highlight"/>
                    <button name="do_import_loc_hotel_data" string="Import Hotelbeds ALL Hotel Data" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <record id="action_import_locations" model="ir.actions.act_window">
            <field name="name">Import Locations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.locations</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_import_locations"/>
            <field name="target">new</field>
        </record>
        
        <menuitem action="action_import_locations" id="menu_import_locations" 
        		parent="menu_configuration" name="Import Locations" 
        		sequence="20" groups="base.group_erp_manager"/>
        
        
        
    </data>
</openerp>
