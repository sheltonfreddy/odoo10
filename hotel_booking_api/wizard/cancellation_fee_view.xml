<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_cancellation_fee" model="ir.ui.view">
            <field name="name">cancellation_fee</field>
            <field name="model">cancellation.fee</field>
            <field name="arch" type="xml">
             <form string="Cancellation Fee">
                <group colspan="4" col="4">
                	<field name="cancellation_fee" readonly="1"/>
                	<field name="currency" nolabel="1" readonly="1"/>
                </group>
                <group colspan="4" col="2">
                	<field name="booked_hotel_id" invisible="1"/>
                	<field name="booked_activity_id" invisible="1"/>
                </group>
                <footer>
                    <button name="do_cancel" string="Do Cancellation" type="object" attrs="{'invisible':[('booked_activity_id','!=', False)]}" class="oe_highlight"/>
                    <button name="do_cancel_activity" string="Cancel Activity" type="object" attrs="{'invisible':[('booked_hotel_id','!=', False)]}" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
            </field>
        </record>

        <record id="action_cancellation_fee" model="ir.actions.act_window">
            <field name="name">Cancellation Fee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cancellation.fee</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_cancellation_fee"/>
            <field name="target">new</field>
        </record>
        
    </data>
</openerp>
