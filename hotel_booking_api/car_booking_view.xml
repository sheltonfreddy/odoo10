<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="car_booking_view_form" model="ir.ui.view">
            <field name="name">car_booking.view.form</field>
            <field name="model">car.booking</field>
            <field name="arch" type="xml">
                <form string="Car Booking">
                    <group col="4">
                        <field colspan="4" name="destination_id"/>
                        <field colspan="4" name="customer_id"/>
                        <field colspan="2" name="pickup_date"/>
                        <field colspan="2" name="dropoff_date"/>
                        <field colspan="2" name="pickup_hour"/>
                        <field colspan="2" name="dropoff_hour"/>
                        <field colspan="2" name="vehicle_type"/>
                        <field colspan="2" name="car_company"/>
                        <field colspan="2" name="total_pax" required="1"/>
                        <button name="search_cars" type="object" string="Search Cars"/>
                    
                    <separator string="Cars" colspan="4"/>
                        <field colspan="4" name="car_searchresult_ids" nolabel="1">
                        	<tree>
                        	    <!-- field name="image" widget="image" height="110" resize="150,110"/-->
                        		<field name="name"/>
                        		<field name="comp_name"/>
                        		<field name="min_price" string="Min. Rate"/>
                        		<field name="api_type"/>
                        	</tree>
                        	<form string="Car Booking">
                        		<group col="4">
                        			<field name="name" readonly="1"/>
			                        <field name="comp_name" readonly="1"/>
			                        <field name="min_price" readonly="1"/>
			                        <field name="api_type" invisible="1"/>
			                        <field name="booked" invisible="1"/>
				                    <button name="book_car" type="object" 
				                           string="Book" attrs="{'invisible':[('booked','=', True)]}"/>
			                    </group>
			                </form>
                        </field>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_car_booking" model="ir.actions.act_window">
            <field name="name">Car Booking</field>
            <field name="res_model">car.booking</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>
        
        <menuitem action="action_car_booking" id="menu_car_booking" 
        		parent="menu_main_hotels" name="Car Booking" 
        		sequence="11"/>
        
    </data>
</openerp>
