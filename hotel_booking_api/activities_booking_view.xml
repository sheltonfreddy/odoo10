<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	
    	<!-- Data Storage Form View -->
    	<record id="data_storage_view_form" model="ir.ui.view">
            <field name="name">data_storage.view.form</field>
            <field name="model">data.storage</field>
            <field name="arch" type="xml">
                <form string="Data Storage">
                    <field name="image" widget="image" nolabel="1" resize="400,500" height="300"/> 
                </form>
            </field>
        </record>

        <record id="acivity_booking_view_form" model="ir.ui.view">
            <field name="name">acivity_booking.view.form</field>
            <field name="model">acivity.booking</field>
            <field name="arch" type="xml">
                <form string="Book Hotels">
                    <group col="4">
                        <field colspan="4" name="destination_id"/>
                        <field colspan="4" name="customer_id"/>
                        <field colspan="2" name="from_date"/>
                        <field colspan="2" name="to_date"/>
                        <field colspan="2" name="person_selection" required="1"/>
                        <field colspan="2" name="person_ages" required="1" placeholder="Please enter the persons age in comma spearated format. Example: 24,30"/>
                        <button name="search_acivity" type="object" string="Search Activities"/>
                        <separator string="Activities" colspan="4"/>
                        <field colspan="4" name="activities_searchresult_ids" nolabel="1">
                        	<tree>
                        		<field name="name"/>
                        		<field name="destination"/>
                        		<field name="amount" string="Lowest Rate"/>
                        		<field name="currency"/>
                        		<field name="image" widget="image" height="110" resize="150,110"/>
                        	</tree>
                        	<form string="Hotel">
                        		<sheet>
		                        	<group col="4">
		                        		<group col="4">
		                        			<group col="2">
			                        			 <field name="image" widget="image" nolabel="1" 
			                        			   resize="400,500" height="300"/>
			                        		</group>
			                        		<group col="2">
			                        		    <div class="oe_title" style="width: 390px;">
					                        		<h1><field name="name" readonly="1" 
					                        		     class="oe_inline"/></h1>
					                        		<h2><field name="destination" readonly="1"/></h2>
					                        		<button name="show_rates" type="object" string="Show Rates"
					                        		         attrs="{'invisible':[('type','!=', 'hotelbeds')]}"/>
				                        		</div>
				                        		<group col="2" colspan="2">
				                        			<field name="availabilities_id" 
				                        				domain="[('searchresult_id','=', id)]"
				                        				attrs="{'invisible':[('type','=', 'hotelbeds')]}"/>
				                        			<field name="availabilities_type" readonly="1"
				                        				attrs="{'invisible':[('availabilities_id','=', False)]}"/>
				                        			<field name="adult_Price" readonly="1"
				                        				attrs="{'invisible':['|',('availabilities_id','=', False),('availabilities_type','=','PerUnit')]}"/>
				                        			<field name="child_Price" readonly="1"
				                        				attrs="{'invisible':['|',('availabilities_id','=', False),('availabilities_type','=','PerUnit')]}"/>
				                        			<field name="unit_price" readonly="1"
				                        				attrs="{'invisible':['|',('availabilities_id','=', False),('availabilities_type','=','PerPerson')]}"/>
				                        			<field name="type" invisible="1"/>
				                        			<field name="num_of_adults" 
				                        				attrs="{'invisible':[('availabilities_id','=', False)]}"/>
				                        			<field name="num_of_children" 
				                        				attrs="{'invisible':[('availabilities_id','=', False)]}"/>
				                        			<button name="turico_show_deatils" type="object" string="Show More Deatils"
				                        				attrs="{'invisible':[('type','=', 'hotelbeds')]}"/>
				                        			<button name="book_turico" type="object" string="Book"
				                        				attrs="{'invisible':[('availabilities_id','=', False)]}"/>
				                        			
				                        		</group>
		                        			</group>
	                        			</group>
	                        			<field name="turico_detailed" invisible="1"/>
	                        			<separator string="Description" colspan="4" 
	                        				attrs="{'invisible':[('turico_detailed','=', True)]}"/>
	                        			<field name="description" readonly="1" widget="html"
	                        			     colspan="4" nolabel="1" type="html" 
	                        			     attrs="{'invisible':[('turico_detailed','=', True)]}"/>
	                        			     
	                        			<notebook colspan="4" >
					                        <page string="Description" attrs="{'invisible':[('turico_detailed','=', False)]}">
					                            <field name="ext_description" colspan="4" />
					                        </page>
					                        <page string="Images" attrs="{'invisible':[('turico_detailed','=', False)]}">
					                            <field name="image_ids" colspan="4" nolabel="1" readonly="1">
						                            <tree>
						                        		<field name="image" widget="image" 
						                        			height="110" resize="150,110"/>
						                        	</tree>
					                            </field>
					                        </page>
					                    </notebook>
	                        			     
	                        			<!-- <separator string="Modalities" colspan="4"/>
	                        			<field colspan="4" name="rates_ids" nolabel="1">
				                        	<tree editable="bottom">
				                        		<field name="name"/>
				                        		<field name="type"/>
				                        		<field name="ageFrom"/>
				                        		<field name="ageTo"/>
				                        		<field name="duration"/>
				                        		<field name="amount"/>
				                        		<field name="cancellationPolicies"/>
				                        	</tree>
				                        </field> -->
		                        	</group>
	                        	</sheet>
                        	</form>
                        </field>
                    </group>
                </form>
            </field>
        </record>

         <record id="acivity_booking_view_tree" model="ir.ui.view">
            <field name="name">acivity_booking.view.tree</field>
            <field name="model">acivity.booking</field>
            <field name="arch" type="xml">
                <tree string="Acivity Booking">
                    <field name="destination_id"/>
                    <field name="customer_id"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                </tree>
            </field>
        </record>

        <record id="acivity_booking_view_search" model="ir.ui.view">
            <field name="name">acivity_booking.view.search</field>
            <field name="model">acivity.booking</field>
            <field name="arch" type="xml">
                <search string="Acivity Booking">
                    <field name="destination_id"/>
                    <field name="customer_id"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
               </search>
            </field>
        </record>

        <record id="action_acivity_booking" model="ir.actions.act_window">
            <field name="name">Acivity Booking</field>
            <field name="res_model">acivity.booking</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="search_view_id" ref="acivity_booking_view_search"/>
        </record>

        
        <menuitem action="action_acivity_booking" id="menu_acivity_booking" 
        		parent="menu_main_hotels" name="Acivity Booking" 
        		sequence="10"/>
        		
        		
        <record id="activities_deatils_view_form" model="ir.ui.view">
            <field name="name">activities_deatils.view.form</field>
            <field name="model">activities.deatils</field>
            <field name="arch" type="xml">
                <form string="Rates and Deatils">
                    <group col="4">
                        <separator string="Amounts Details" colspan="4"/>
                        <field colspan="4" name="type" readonly="1"/>
                        <field colspan="4" name="paxAmounts" readonly="1" 
                        	attrs="{'invisible':[('type','=', 'turico')]}"/>
                        	
                       	<field colspan="4" name="total_amount" readonly="1" 
                       		attrs="{'invisible':[('type','=', 'turico')]}"/>
                        <field colspan="4" name="total_amount_txt" readonly="1"/>
                        
                        <separator string="Available Dates" colspan="4" 
                        	attrs="{'invisible':[('type','=', 'turico')]}"/>
                        <field colspan="4" name="days" readonly="1" 
                        	attrs="{'invisible':[('type','=', 'turico')]}"/>
                        <field colspan="4" name="operationDates_ids" nolabel="1"
                        	attrs="{'invisible':[('type','=', 'turico')]}">
                        	<tree editable="bottom">
                        		<field name="from_date"/>
                        		<field name="to_date"/>
                        		<field name="cancellationPolicies"/>
                        		<field name="select_date"/>
                        	</tree>
                        </field>
                        <separator string="Questions" colspan="4"/>
                        <field colspan="4" name="questions_ids" nolabel="1">
                        	<tree editable="bottom">
                        		<field name="text" readonly="1"/>
                        		<field name="code" readonly="1"/>
                        		<field name="required" readonly="1"/>
                        		<field name="answer"/>
                        	</tree>
                        </field>
                        <separator string="Cancellation Policies" colspan="4" 
                        	attrs="{'invisible':[('type','=', 'hotelbeds')]}"/>
                        <field colspan="4" name="turico_cancellation_ids" readonly="1" 
                            nolabel="1"
                        	attrs="{'invisible':[('type','=', 'hotelbeds')]}">
                        	<tree>
                        		<field name="unitsFromCheckIn"/>
                        		<field name="offsetUnit"/>
                        		<field name="basisType"/>
                        		<field name="value"/>
                        	</tree>
                        	
                        </field>
                        
                        <button name="confirm_booking" type="object" string="Book"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="action_activities_deatils" model="ir.actions.act_window">
            <field name="name">Activities Deatils</field>
            <field name="res_model">activities.deatils</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>

        
        <record id="activities_confirm_booking_view_form" model="ir.ui.view">
            <field name="name">activities_confirm_booking.view.form</field>
            <field name="model">activities.confirm_booking</field>
            <field name="arch" type="xml">
                <form string="Confrim Booking">
                    <group col="4">
                        <separator string="Customer Details" colspan="4"/>
                        <field name="title" colspan="4"/>
                        <field name="name"/>
                        <field name="surname"/>
                        <field name="type" invisible="1"/>
                        <field name="address" colspan="4" attrs="{'invisible':[('type','=', 'turico')]}"/>
                        <field name="country_id" attrs="{'invisible':[('type','=', 'turico')]}"/>
                        <field name="zipCode" attrs="{'invisible':[('type','=', 'turico')]}"/>
                        <field name="email"/>
                        <field name="telephones"/>
                        <field name="mobilePhone"/>
                        <field name="mailing" attrs="{'invisible':[('type','=', 'turico')]}"/>
                        
                        
                        <field colspan="4" name="paxes_ids" nolabel="1">
                        	<tree editable="bottom">
                        		<field name="type"/>
                        		<field name="age"/>
                        		<field name="name"/>
                        		<field name="surname"/>
                        	</tree>
                        </field>
                        <button name="do_book" type="object" string="Confirm Booking"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="action_activities_confirm_booking" model="ir.actions.act_window">
            <field name="name">Confirm Booking</field>
            <field name="res_model">activities.confirm_booking</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>

    </data>
</openerp>
